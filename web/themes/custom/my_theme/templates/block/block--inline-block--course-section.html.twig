{#
/**
 * @file
 * Theme override to display a block.
 *
 * Available variables:
 * - plugin_id: The ID of the block implementation.
 * - label: The configured label of the block if visible.
 * - configuration: A list of the block's configuration values.
 *   - label: The configured label for the block.
 *   - label_display: The display settings for the label.
 *   - provider: The module or other provider that provided this block plugin.
 *   - Block plugin specific settings will also be stored here.
 * - in_preview: Whether the plugin is being rendered in preview mode.
 * - content: The content of this block.
 * - attributes: array of HTML attributes populated by modules, intended to
 *   be added to the main container tag of this template.
 *   - id: A valid HTML ID and guaranteed unique.
 * - title_attributes: Same as attributes, except applied to the main title
 *   tag that appears in the template.
 * - title_prefix: Additional output populated by modules, intended to be
 *   displayed in front of the main title tag that appears in the template.
 * - title_suffix: Additional output populated by modules, intended to be
 *   displayed after the main title tag that appears in the template.
 *
 * @see template_preprocess_block()
 */
#}
<div{{attributes}}>
	{{ title_prefix }}
	{% if label %}
		<h2{{title_attributes}}>{{ label }}</h2>
	{% endif %}
	{{ title_suffix }}
		<div class="container-fluid courses overflow-hidden py-5"> <div class="container py-5">
			<div class="text-center mx-auto pb-5 wow fadeInUp" data-wow-delay="0.2s" style="max-width: 800px;">
				<h4 class="text-primary">
					{{ content.field_course_main_title.0 }}</h4>
				<h1 class="display-4 text-white mb-4">{{ content.field_course_heading.0 }}</h1>
				<p class="text-white mb-0">{{ content.field_course_main_description.0 }}</p>
			</div>
			<div class="row gy-4 gx-0 justify-content-center">
				{% for item in content.field_course['#items'] %}
					{% set paragraph = item.entity %}
					<div class="col-md-6 col-lg-4 wow fadeInUp" data-wow-delay="0.2s">
						<div class="courses-item">
							<div class="courses-item-inner p-4">
								<div class="d-flex justify-content-between mb-4">
									<div class="courses-icon-img p-3">
										{% if paragraph.field_course_icon.entity is not empty %}
										{% set media = paragraph.field_course_icon.entity %}
										{% set image = media.field_media_image.entity %}
										<img 
											src="{{ file_url(image.uri.value) }}" 
											class="img-fluid w-100"
											style="object-fit: cover;"
											alt="{{ media.field_media_image.alt }}" />
										{% endif %}
									</div>
									<div class="data-info d-flex flex-column">
										<div class="courses-trainer d-flex align-items-center mb-1">
											<div class="me-2" style="width: 25px; height: 25px;">
												{% if paragraph.field_instructor_image.entity is not empty %}
												{% set media = paragraph.field_instructor_image.entity %}
												{% set image = media.field_media_image.entity %}
												<img 
													src="{{ file_url(image.uri.value) }}" 
													class="img-fluid"
													style="object-fit: cover;"
													alt="{{ media.field_media_image.alt }}" />
												{% endif %}											</div>
											<p class="mb-0">{{ paragraph.field_instructor_name.value }}</p>
										</div>
										<div class="courses-date">
											<p class="mb-1">Date:
												{{ paragraph.field_date.value }}</p>
											<p class="mb-0">Time:
												{{ paragraph.field_time.value }}</p>
										</div>
									</div>
								</div>
								<a href="{{ paragraph.field_course_name.0.url }}" class="d-inline-block h4 mb-3">
									{{ paragraph.field_course_name.0.title }}</a>
								<p class="mb-4">{{ paragraph.field_course_description.value }}
								</p>
								<a href="{{ paragraph.field_course_read_more_link.0.url }}" class="btn btn-primary py-2 px-4">
									<span>{{ paragraph.field_course_read_more_link.0.title }}</span>
								</a>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
			<div class="col-12 text-center wow fadeInUp" data-wow-delay="0.2s">
				<span class="btn btn-primary py-3 px-5">{{ content.field_more_courses }}</span>
			</div>
		</div>
	</div>
</div></div>
